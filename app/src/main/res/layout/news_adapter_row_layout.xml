<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newsAdapter_base_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/newsAdapter_title_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heading Title"
            android:textColor="?attr/primaryTextColor"
            android:textSize="16sp"
             />

        <TextView
            android:id="@+id/newsAdapter_description_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:fontFamily="serif"
            android:text="Description text"
            android:visibility="gone"
            android:textColor="?attr/secondaryTextColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/newsAdapter_pubDate_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="monospace"
            android:text="date"
            android:paddingTop="8dp"
            android:textColor="?attr/secondaryTextColor"
            android:textSize="12sp" />


    </LinearLayout>

        <ImageView
            android:layout_width="32dp"
            android:src="@drawable/not_bookmark"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/newsAdapter_bookMark_imageView"
            android:layout_height="32dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/newsAdapter_isReadMask_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/readMaskColor"
        android:visibility="gone" />

</android.support.v7.widget.CardView>