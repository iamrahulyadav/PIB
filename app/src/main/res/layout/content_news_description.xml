<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pib.affairs.current.app.pib.NewsDescriptionActivity"
    tools:showIn="@layout/activity_news_description">

<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

            <WebView
                android:id="@+id/newsDesription_webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animationCache="true"
                android:visibility="visible">

            </WebView>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/newsDesription_adContainer_linearLayout"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            >



        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>



    <TextView
        android:id="@+id/newsDescription_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</LinearLayout>
